
<workflow-app xmlns="uri:oozie:workflow:0.2" name="Flight-Data-Analysis">
    <start to="On-Schedule-Probability"/>
    <action name="On-Schedule-Probability">
      <map-reduce>
        <job-tracker>${jobTracker}</job-tracker>
           <name-node>${nameNode}</name-node>
             <configuration>
                <property>
                   <name>mapred.job.queue.name</name>
                   <value>${queueName}</value>
                </property>
                <property>
                   <name>mapred.mapper.class</name>
                   <value>AirlineDelayProbabilityMapper</value>
                </property>
                <property>
                   <name>mapred.reducer.class</name>
                   <value>AirlineDelayProbabilityReducer</value>
                </property>
                <property>
                   <name>mapred.output.key.class</name>
                   <value>org.apache.hadoop.io.Text</value>
                </property>
                <property>
                   <name>mapred.output.value.class</name>
                   <value>org.apache.hadoop.io.DoubleWritable</value>
                </property>
                <property>
                  <name>mapred.map.tasks</name>
                  <value>1</value>
                </property>
                <property>
                   <name>mapred.input.dir</name>
                   <value>/user/${wf:user()}/${inputDir}</value>
                </property>
                <property>
                   <name>mapred.output.dir</name>
                   <value>/user/${wf:user()}/${outputDir1}</value>
                </property>
           </configuration>
      </map-reduce>
      <ok to="Taxi-Average"/>
      <error to="fail"/>
    </action>
    <action name="Taxi-Average">
       <map-reduce>
           <job-tracker>${jobTracker}</job-tracker>
           <name-node>${nameNode}</name-node>
           <configuration>
              <property>
                  <name>mapred.job.queue.name</name>
                  <value>${queueName}</value>
              </property>
              <property>
                  <name>mapred.mapper.class</name>
                  <value>AirportTaxiTimeMapper</value>
              </property>
              <property>
                  <name>mapred.reducer.class</name>
                  <value>AirportTaxiTimeReducer</value>
              </property>
              <property>
                  <name>mapred.output.key.class</name>
                  <value>org.apache.hadoop.io.Text</value>
              </property>
              <property>
                  <name>mapred.output.value.class</name>
                  <value>org.apache.hadoop.io.DoubleWritable</value>
              </property>
              <property>
                  <name>mapred.map.tasks</name>
                  <value>1</value>
              </property>
              <property>
                  <name>mapred.input.dir</name>
                  <value>/user/${wf:user()}/${inputDir}</value>
              </property>
              <property>
                  <name>mapred.output.dir</name>
                  <value>/user/${wf:user()}/${outputDir2}</value>
              </property>
          </configuration>
      </map-reduce>
      <ok to="Cancellation-Cause"/>
      <error to="fail"/>
    </action>
    <action name="Cancellation-Cause">
      <map-reduce>
          <job-tracker>${jobTracker}</job-tracker>
          <name-node>${nameNode}</name-node>
          <configuration>
              <property>
                  <name>mapred.job.queue.name</name>
                  <value>${queueName}</value>
              </property>
              <property>
                  <name>mapred.mapper.class</name>
                  <value>CancellationCauseMapper</value>
              </property>
              <property>
                  <name>mapred.reducer.class</name>
                  <value>CancellationCauseReducer</value>
              </property>
              <property>
                 <name>mapred.output.key.class</name>
                 <value>org.apache.hadoop.io.Text</value>
              </property>
              <property>
                 <name>mapred.output.value.class</name>
                 <value>org.apache.hadoop.io.IntWritable</value>
              </property>
              <property>
                <name>mapred.map.tasks</name>
                <value>1</value>
              </property>
              <property>
                  <name>mapred.input.dir</name>
                  <value>/user/${wf:user()}/${inputDir}</value>
              </property>
              <property>
                  <name>mapred.output.dir</name>
                  <value>/user/${wf:user()}/${outputDir3}</value>
              </property>
          </configuration>
      </map-reduce>
      <ok to="end"/>
      <error to="fail"/>
    </action>
    <kill name="fail">
        <message>Job failed, error message[${wf:errorMessage(wf:lastErrorNode())}]</message>
    </kill>
    <end name="end"/>
</workflow-app>
